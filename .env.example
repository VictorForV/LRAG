# PostgreSQL Configuration with pgvector
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/rag_db
DATABASE_NAME=rag_db

# LLM Provider Configuration (OpenRouter compatible)
LLM_PROVIDER=openrouter
LLM_API_KEY=sk-or-v1-your-openrouter-api-key-here
LLM_MODEL=anthropic/claude-haiku-4.5
LLM_BASE_URL=https://openrouter.ai/api/v1

# Embedding Provider Configuration
EMBEDDING_PROVIDER=openrouter
EMBEDDING_API_KEY=sk-or-v1-your-openrouter-api-key-here  # Can be same as LLM
EMBEDDING_MODEL=qwen/qwen3-embedding-8b
EMBEDDING_BASE_URL=https://openrouter.ai/api/v1
EMBEDDING_DIMENSION=4096

# Audio Transcription Model (optional)
AUDIO_MODEL=openai/gpt-audio-mini

# OpenRouter Proxy for Audio API (optional, required for gpt-audio-mini)
# Format: http://username:password@host:port
# Get from: https://openrouter.ai/docs#audio-models
OPENROUTER_PROXY_URL=

# Graph/Relation Extraction Model (optional, defaults to LLM_MODEL)
GRAPH_MODEL=

# Search Configuration
DEFAULT_MATCH_COUNT=10
MAX_MATCH_COUNT=50
DEFAULT_TEXT_WEIGHT=0.3
